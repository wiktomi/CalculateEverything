@model FlatGeometryModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CalculateEverything</title>
    <link rel="stylesheet" href="~/lib/twitter-bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body onload="DiplayClock(); setInterval('DiplayClock()', 1000);">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">

            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CalculateEverything</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02"
                        aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor02">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            <span class="visually-hidden"></span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Geometria płaska</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-area="" asp-controller="FlatGeometry" asp-action="Square">Kwadrat</a>
                                <a class="dropdown-item" asp-area="" asp-controller="FlatGeometry" asp-action="Rectangle">Prostokąt</a>
                                <a class="dropdown-item" asp-area="" asp-controller="FlatGeometry" asp-action="Triangle">Trójkąt</a>
                                <a class="dropdown-item" asp-area="" asp-controller="FlatGeometry" asp-action="Parallelogram">Równoległobok</a>
                                <a class="dropdown-item" asp-area="" asp-controller="FlatGeometry" asp-action="RhombusAndDeltoid">Romb i deltoid</a>
                                <a class="dropdown-item" asp-area="" asp-controller="FlatGeometry" asp-action="Trapezium">Trapez</a>
                                <a class="dropdown-item" asp-area="" asp-controller="FlatGeometry" asp-action="Circle">Koło</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Geometria przestrzenna</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-area="" asp-controller="FlatGeometry" asp-action="Square">Sześcian</a>
                                <a class="dropdown-item" asp-area="" asp-controller="FlatGeometry" asp-action="Rectangle">Prostopadłościan</a>
                                <a class="dropdown-item" asp-area="" asp-controller="FlatGeometry" asp-action="Triangle">Ostrosłupy prawidłowe</a>
                                <a class="dropdown-item" asp-area="" asp-controller="FlatGeometry" asp-action="Parallelogram">Czworościan foremny</a>
                                <a class="dropdown-item" asp-area="" asp-controller="FlatGeometry" asp-action="RhombusAndDeltoid">Walec</a>
                                <a class="dropdown-item" asp-area="" asp-controller="FlatGeometry" asp-action="Trapezium">Stożek</a>
                                <a class="dropdown-item" asp-area="" asp-controller="FlatGeometry" asp-action="Circle">Kula</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">

        <div class="container">
            <div class="row" style="color:azure">
                <div class="col-lg-6">
                    &copy; 2021 - CalculateEverything - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
                <div class="col-lg-6" style="text-align: right;">
                    <span class="" id="clock">&nbsp;</span>
                </div>
            </div>
        </div>

    </footer>
    <script>
        function DiplayClock() {
            var currentTime = updateClock();
            document.getElementById("clock").firstChild.nodeValue = currentTime;
        }
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
